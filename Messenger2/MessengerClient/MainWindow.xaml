<Window x:Class="MessengerClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerClient"
        mc:Ignorable="d"
        Title="ACS A3 Messenger" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid Width="600" Height="400">
        <TextBox x:Name="sendTextBox" HorizontalAlignment="Left" Height="20" Margin="83,370,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="445" RenderTransformOrigin="0.269,7.487" KeyDown="sendTextBox_KeyDown"/>
        <Button x:Name="sendButton" Content="SEND" HorizontalAlignment="Left" Margin="542,370,0,0" VerticalAlignment="Top" Width="48" Click="sendButton_Click"/>
        <TextBox x:Name="notificationBoard" HorizontalAlignment="Left" Height="348" Margin="10,10,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="580"
                 IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        <CheckBox x:Name="encryptCheckBox" Content="Encrypt" HorizontalAlignment="Left" Margin="10,370,0,0" VerticalAlignment="Top" Height="20"/>

    </Grid>
</Window>
